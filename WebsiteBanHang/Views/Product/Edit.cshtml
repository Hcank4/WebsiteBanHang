@model Product
<h2>Edit</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div><label>Name:</label><input asp-for="Name" class="form-control" /></div>
    <div><label>Price:</label><input asp-for="Price" class="form-control" /></div>
    <div><label>Description:</label><input asp-for="Description" class="form-control" /></div>
    <div><label>CategoryId:</label><input asp-for="CategoryId" class="form-control" /></div>
    <div><label>Image:</label><input type="file" name="image" class="form-control" /></div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>